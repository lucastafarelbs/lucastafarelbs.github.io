*{
  margin:0px;
  padding: 0px;
  overflow-x: hidden;
  font-family: monospace;
}

.avatar {
  max-width: 200px;
  border-radius: 100%;
  box-shadow: 3px 3px 15px 2px rgba(0,0,0,0.5);

}

.presentation{
  padding-top: 20px;
  color: white;
  font-size: 20px;
  max-width: 50%;
}

.bloco{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.links {
  width: 100%;
  height: 50px;
  position: fixed;
  display: flex;
}


.links label{
  padding: 10px 0px;
  flex-grow: 1;
  cursor: pointer;
  transition: all 0.4s;
  text-align: center;
  font-family: 'Arial';
  font-size: 70px;
  color: #fff;
}

.links label:hover{
  background-color: rgba(255, 255, 255, 0.5);()
}

#sobre{
  background-image: url(../img/background-img.jpg);
  background-position: center center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  background-color: #464646;
}

