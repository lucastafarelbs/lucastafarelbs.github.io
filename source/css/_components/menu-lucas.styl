h1
    text-align center
    width 100%
    margin-top 120px
    color #eee
    font-weight 800
    font-size 40px

nav
    & > ul
        float right
        & > li
            text-align center
            line-height 40px
            margin-left 70px
            float left
            & > a
                cursor pointer
                display block
                outline none
                width 100%
                text-decoration none
        li
            ul
                display none
                position absolute
                left 0
                top 100%
                width 100%
                z-index 2000
                li
                    width 100%
                    text-align left
                    & > a
                        text-decoration none
    ul
        li
            &:hover
                cursor pointer
                position relative
                & > ul
                    display block
                & > a
                    color #777
    a
        color white

[type="checkbox"], label
    display none

@media screen and (max-width: 768px)
    nav
        ul
            display none
            li
                display block
                float none
                width 100%
                text-align left
                background #222
                text-indent 20px
        a
            color #777
        & > ul
            & > li
                margin-left 0px
            li
                ul
                    display block
                    position relative
                    width 100%
                    z-index 9999
                    float none
                    li
                        display block
                        float none
    label
        display block
        background #222
        width 40px
        height 40px
        cursor pointer
        position absolute
        right 20px
        top 0px
        &:after
            content ''
            display block
            width 30px
            height 5px
            background #777
            margin 7px 5px
            box-shadow 0px 10px 0px #777, 0px 20px 0px #777
    [type="checkbox"]:checked
        & ~ ul
            display block
            z-index 9999
            position absolute
            right 20px
            left 20px
    h1
        font-size 26px
